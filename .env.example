# ==================================
# SUPABASE CONFIGURATION
# ==================================
# Get these values from your Supabase project settings:
# https://app.supabase.com/project/_/settings/api

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon/Public Key (safe to use in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (NEVER expose to client/browser - server-side only)
# Only use this for admin operations on the server
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here


# ==================================
# APPLICATION CONFIGURATION
# ==================================

# Application URL (used for redirects, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Name
NEXT_PUBLIC_APP_NAME=iTuwa


# ==================================
# AUTHENTICATION
# ==================================

# JWT Secret (generate a strong random string)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here

# Session Secret (generate a strong random string)
SESSION_SECRET=your-session-secret-here


# ==================================
# EMAIL CONFIGURATION (Optional)
# ==================================
# If you're using a custom email service (e.g., SendGrid, Mailgun)

# Email Service Provider
EMAIL_PROVIDER=sendgrid

# Email API Key
EMAIL_API_KEY=your-email-api-key-here

# Email From Address
EMAIL_FROM=noreply@yourdomain.com


# ==================================
# PAYMENT GATEWAY (Optional)
# ==================================
# If you're integrating payment services

# Stripe Keys (if using Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Paystack Keys (if using Paystack)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your-public-key
PAYSTACK_SECRET_KEY=sk_test_your-secret-key


# ==================================
# ANALYTICS (Optional)
# ==================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed if using @vercel/analytics


# ==================================
# STORAGE/CDN (Optional)
# ==================================

# AWS S3 (if using for file storage)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Cloudinary (if using for image hosting)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret


# ==================================
# DEVELOPMENT/DEBUGGING
# ==================================

# Node Environment
NODE_ENV=development

# Enable debug mode
DEBUG=false

# Log Level (error, warn, info, debug)
LOG_LEVEL=info


# ==================================
# SECURITY
# ==================================

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000


# ==================================
# THIRD-PARTY SERVICES (Optional)
# ==================================

# Google Maps API (if using maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Media OAuth (if using social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# SMS Service (e.g., Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890


# ==================================
# DATABASE (if using additional databases)
# ==================================

# PostgreSQL (if using direct connection instead of Supabase)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis (if using for caching/sessions)
# REDIS_URL=redis://localhost:6379


# ==================================
# NOTES
# ==================================
# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local or .env files to version control
# 3. Update values with your actual credentials
# 4. For production, set these in your hosting platform's environment variables
# 5. NEXT_PUBLIC_* variables are exposed to the browser - never put secrets there
# 6. Keep service role keys and secrets server-side only
